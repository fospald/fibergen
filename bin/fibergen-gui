#!/bin/bash

HOST=$(uname -n | tr " -." "___")
FIBERGEN_DIR=$(cd $(dirname "$0") && pwd)
PYTHON=python

if [ -n "$(ldd "${FIBERGEN_DIR}/fibergen_${HOST}" | grep libpython3)" ]
then
	PYTHON=python3
fi

#$PYTHON -m trace --trace "${FIBERGEN_DIR}/../gui/main.py" "$@"
$PYTHON "${FIBERGEN_DIR}/../gui/main.py" "$@"
#valgrind $PYTHON "${FIBERGEN_DIR}/../gui/main.py" "$@"

